generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EmergencyContact {
  id      Int    @id @default(autoincrement())
  name    String
  contact String
  User    User   @relation(fields: [userId], references: [id])
  userId  Int
}

model User {
  id                Int                @id @default(autoincrement())
  email             String             @unique
  name              String?
  emergencyContacts EmergencyContact[]
}
